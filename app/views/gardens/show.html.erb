<div class="d-flex justify-content-center align-items-center" 
     style="background-image: url('<%= @garden.banner_url %>'); background-size: cover; background-position: center; height: 50vh;">
  <h1 class="text-white"><%= @garden.name %></h1>
</div>

<div class="d-flex justify-content-around mt-3">
  <% @plants.each do |plant| %>
    <div class="d-flex justify-content-center align-items-center"
         style="background-image: url('<%= plant.image_url %>'); background-size: cover; background-position: center; height: 350px; width: 300px;">
      <h2 class="text-white"> <%= plant.name %> </h2>
    </div>
  <% end %>
</div>

