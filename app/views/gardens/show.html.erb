<div class="d-flex justify-content-center align-items-center" 
     style="background-image: url('<%= @garden.banner_url %>'); background-size: cover; background-position: center; height: 50vh;">
  <h1 class="text-white"><%= @garden.name %></h1>
</div>

<div class="d-flex justify-content-around my-3">
  <% @plants.each do |plant| %>
    <div class="d-flex justify-content-center align-items-center"
         style="background-image: url('<%= plant.image_url %>'); background-size: cover; background-position: center; height: 350px; width: 300px; position: relative;">
      <h2 class="text-white"> <%= plant.name %> </h2>
      <%= link_to plant_path(plant), 
                  style: "position: absolute; top: 10px; right: 10px;",
                  method: :delete, 
                  data: {confirm: "sure?"} do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>
</div>

<div class="container my-3">
  <%= simple_form_for([@garden, @plant]) do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>